@import 'mixins'
@import 'variables'


/************************** 
Grid
***************************/

.grid-container 
	marginCenter()
	hzPadding($container-padding) 

	// No specified width on extra small or small screens

	@media $screen-md
		width $container-md

	@media $screen-lg
		width $container-lg

	@media $screen-xl
		width $container-xl

.grid-row
	displayFlex()
	rowWrap()
	width 100%
	margin-left -$containerPadding
	margin-right -$containerPadding

/* Mobile column */
.grid-col-xs
	gridCol($col-padding, 1, 1, 100%)

