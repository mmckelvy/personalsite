@import 'mixins'
@import 'variables'


/************************** 
Grid
***************************/

.grid-container 
	marginCenter()
	hzPadding($container-padding) 

	// No specified width on extra small or small screens

	@media $screen-md
		width $container-md

	@media $screen-lg
		width $container-lg

	@media $screen-xl
		width $container-xl

.grid-row
	displayFlex()
	rowWrap()
	width 100%
	margin-left $row-neg-margin
	margin-right $row-neg-margin

/* Mobile column full-screen -- number suffix represents % of row */
.grid-col-xs-30
	gridCol($col-padding, 1, 1, 10%)
	background-color yellow
	min-height 200px
	border 1px solid orange


	

