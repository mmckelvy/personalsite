@import 'mixins'
@import 'variables'


/*********** Grid *************/

.grid-container 
	marginCenter()
	hzPadding($container-padding) 

	// No specified width on extra small or small screens
	@media $screen-md
		width $container-md

	@media $screen-lg
		width $container-lg

	@media $screen-xl
		width $container-xl

.row-5
	gridRow(-5px)

/********* Positioning **********/


.text-center
	text-align center

/********* Margins **********/
.margin-top-50
	margin-top 50px

.margin-bottom-50
	margin-bottom 50px

.margin-top-20
	margin-top 20px

.margin-bottom-20
	margin-bottom 20px

/********* Padding **********/
.padding-top-20
	padding-top 20px

.padding-bottom-20
	padding-bottom 20px

/******* Flex ********/
.flex-container
	displayFlex()

.flex-hz-center
	flexHzCenter()
	

