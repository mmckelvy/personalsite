@import 'mixins'
@import 'variables'


/************************** 
Grid
***************************/

.grid-container 
	marginCenter()
	hzPadding($container-padding) 

	// No specified width on extra small or small screens

	@media $screen-md
		width $container-md

	@media $screen-lg
		width $container-lg

	@media $screen-xl
		width $container-xl

.grid-row
	displayFlex()
	margin-left $row-neg-margin
	margin-right $row-neg-margin

/************************** 
Margins
***************************/



/************************** 
Flex
***************************/

.flex-container
	displayFlex()

.flex-hz-center
	flexHzCenter()
	

