@import 'mixins'
@import 'variables'


/**
* Grid
**/

.main-container 
	createContainer($primary-padding, auto, auto, $container-md, $container-lg, $container-xl)

.main-row
	createRow($primary-padding)

.col-100
	createColumn($primary-padding, 100%)

/**
* Positioning
**/

.text-center
	text-align center

/**
* Margins
**/

.margin-top-50
	margin-top 50px

.margin-bottom-50
	margin-bottom 50px

.margin-top-20
	margin-top 20px

.margin-bottom-20
	margin-bottom 20px

/**
* Padding
**/

.padding-top-20
	padding-top 20px

.padding-bottom-20
	padding-bottom 20px

/**
* Flex
**/

.flex-container
	displayFlex()

.flex-hz-center
	flexHzCenter()
	
.flex-items-3
	flexEr(1, 1, (1/3))

