@import 'variables'
@import 'mixins'

/******* Navigation *******/
.navbar
	displayFlex()
	flexHzRight()
	flexVtCenter()
	height 50px
	background-color #000000

.nav-item
	color #fff
	font-weight 100
	letter-spacing 2px
	padding-right 25px
	padding-left 25px
	text-decoration none

.nav-item:hover
	color $softgreen

.hero-image
	width 100%
	height auto

.flip-container
	position relative
	perspective 300px

.flip-wrapper
	width 100%
	height 100%
	position absolute
	transform-style preserve-3d
	transition transform 1s

.flip-content
	display block
	position absolute
	width 100%
	height 100%
	backface-visibility hidden
		



	
