@import 'variables'
@import 'mixins'
@import 'base'

/**
* Navigation
**/

.navbar
	height: 75px
	background-color: $black
	position: relative

.nav-wrapper
	position: absolute
	right: 20px
	bottom: 0
	padding-bottom: 20px

.nav-list li
	display: inline-block
	padding-right: 20px

	&:last-of-type
		padding-right: 0

	& a
		font-size: 20px
		font-weight: 100
		letter-spacing: 5px
		color: $white
		text-decoration: none

		&:hover
			color $softgreen
					
/**
* Main section
**/

.main-header
	@extend .section-header

	color: $black
	text-align: center
	padding-top: 50px

.headline
	width: 100%
	height: 1500px
	backgrounds('../../images/hero.jpg', center, center, 100%, auto, no-repeat)

	& h2
		font-size: 20px
		font-weight: 100
		letter-spacing: 3px
		text-align: center