@import 'variables'

/*********** Flexbox mixins ***********/

displayFlex()
	display flex 
	display -webkit-flex

rowWrap()
	flex-flow row wrap
	-webkit-flex-flow row wrap

flexEr(flexGrow, flexShrink, flexBasis)
	flex flexGrow flexShrink flexBasis
	-webkit-flex flexGrow flexShrink flexBasis

flexHzCenter()
	justify-content center
	-webkit-justify-content center

flexHzRight()
	justify-content flex-end
	-webkit-justify-content flex-end

flexVtCenter()
	align-items center
	-webkit-align-items center	

/********** Grid mixins ***********/
	
// Generate a custom container 
customContainer(padding, width)
	marginCenter()
	hzPadding(padding)
	width width

// Generate columns
gridCol(padding, flexGrow, flexShrink, flexBasis)
	hzPadding(padding)
	flexEr(flexGrow, flexShrink, flexBasis)

// Generate rows
gridRow(margin)
	margin-left margin
	margin-right margin

/*********** Positioning mixins ***********/

// Center block level elements setting margin right / left to auto
marginCenter()
	margin-left auto
	margin-right auto

hzPadding(padding)
	padding-left padding
	padding-right padding

/*********** Element mixins ***********/
backgrounds(url, horizontal, vertical, width, height, repeat)
	background-image url(url)
	background-position horizontal vertical
	background-size width height
	background-repeat repeat





	