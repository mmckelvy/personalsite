/**
* MODULES
* Distinct CSS sections or components.
**/

/**
* Navigation and site header
**/

.site-header-font
	font-size: 24px
	font-weight: 200
	letter-spacing: 5px

.site-subhead-font
	font-size: 14px
	font-weight: 200
	letter-spacing: 3px		

.navbar
	border-top: 2px solid $darkgrey

.nav-list
	width: 45%
	marginCenter()
	margin-top: -21px
	background-color: $white

	li
		display: inline-block
		color: $darkgrey
		height: 40px
		line-height: 40px
		width: 20%
		text-align: center

.nav-item-link
	cursor: pointer

	&:hover
		color: $black

.nav-item-active
	color: $black	

/**
* Main content
**/

.content-block
	height: 0
	border-left: 1px solid $grey
	padding-left: 15px

.content-text
	opacity: 0

.content-header
	font-size: 30px
	font-weight: 100
	color: $grey

.external-link
	cursor: pointer
	color: $black

.external-link:hover
	color: $grey
	text-decoration: underline

.portfolio-item
	width: 100%
	height: $portfolio-height
	perspective: 1000
	border: 1px solid $grey

.portfolio-item:hover .portfolio-image
	-webkit-transform: rotateY(180deg)
	-moz-transform: rotateY(180deg)
	-ms-transform: rotateY(180deg)
	transform: rotateY(180deg)

.portfolio-image
	width: 100%
	height: $portfolio-height
	position: absolute
	top: 0
	left: 0
	z-index: 1
	transition: -webkit-transform 1s
	transition: -moz-transform 1s
	transition: -ms-transform 1s
	transition: transform 1s

.portfolio-description
	width: 100%
	height: $portfolio-height
	opacity: 0
	padding: 15px
	border: 1px solid $grey

.portfolio-skoop
	backgrounds('../../images/skoop.png', 0, 0, 100%, auto, no-repeat)

.portfolio-title
	font-size: 18px


	


