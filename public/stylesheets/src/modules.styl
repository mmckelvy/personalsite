/**
* MODULES
* Distinct CSS sections or components.
**/

/**
* Navigation
**/

.navbar
	height: 75px
	position: relative

.nav-wrapper
	position: absolute
	right: 20px
	bottom: 0
	padding-bottom: 20px

.nav-list

	& li
		display: inline-block
		padding-right: 20px
		font-size: 20px
		font-weight: 100
		letter-spacing: 5px
		color: $black

		&:last-of-type
			padding-right: 0

		& a
			text-decoration: none

			&:hover
				color $softgreen
					
/**
* Main section
**/

.headline-wrapper
	width: 100%
	height: 1500px
	
.headline
	width: 100%
	height: 1500px
	background: url('../../images/hero.jpg') no-repeat center center fixed
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover

.section-border
	background-color: $grey
	width: 100%
	height: 1px
	top: 0px
	left: 0px

