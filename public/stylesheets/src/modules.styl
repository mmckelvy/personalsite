/**
* MODULES
* Distinct CSS sections or components.
**/

/**
* Navigation and site header
**/

.site-header-font
	font-size: 24px
	font-weight: 200
	letter-spacing: 5px

.site-subhead-font
	font-size: 14px
	font-weight: 200
	letter-spacing: 3px		

.navbar
	border-top: 2px solid $darkgrey

.nav-list
	width: 45%
	marginCenter()
	margin-top: -21px
	background-color: $white

	li
		display: inline-block
		color: $darkgrey
		height: 40px
		line-height: 40px
		width: 20%
		text-align: center

.nav-item-link
	cursor: pointer

	&:hover
		color: $black

.nav-item-active
	color: $black	

/**
* Main content
**/

.content-block
	height: 0
	border-left: 1px solid $grey
	padding-left: 15px

.content-text
	opacity: 0

.content-header
	font-size: 30px
	font-weight: 100
	color: $grey

.external-link
	cursor: pointer
	color: $black

.external-link:hover
	color: $grey
	text-decoration: underline

/**
* Portfolio section.
**/

// Flipping animation.
.portfolio-item
	width: 100%
	height: $portfolio-height
	border: 1px solid $grey
	perspective: 1000px

.portfolio-item:hover .front-panel
	transform: rotateY(180deg)

.portfolio-item:hover .back-panel
	transform: rotateY(0)	

.front-panel
	position: absolute
	top: 0
	left: 0
	transform-style: preserve-3d
	backface-visibility: hidden
	transition: -webkit-transform 1s

.back-panel
	position: absolute
	top: 0
	left: 0
	transform-style: preserve-3d
	backface-visibility: hidden
	transition: transform 1s
	transform: rotateY(-180deg) // Ensure is initially facing away.

// End flipping animation.

.portfolio-image
	width: 100%
	height: $portfolio-height

.portfolio-description
	width: 100%
	height: $portfolio-height
	padding: 15px

.portfolio-skoop
	backgrounds('../../images/skoopsales.png', 0, 0, 100%, auto, no-repeat)

.portfolio-title
	font-size: 18px
	text-align: center
	font-weight: 200

.portfolio-subtitle
	font-size: 14px
	text-align: center
	color: $grey
	font-weight: 200

.portfolio-section-header
	font-size: 14px
	font-weight: 200
	color: $grey

.portfolio-list li
	list-style-type: square
	list-style-position: inside
	
.portfolio-link:hover
	text-decoration: underline
	cursor: pointer
