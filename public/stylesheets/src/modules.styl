/**
* MODULES
* Distinct CSS sections or components.
**/

/**
* Navigation
**/

.navbar
	height: 75px
	position: relative

.nav-wrapper
	position: absolute
	right: 20px
	bottom: 0
	padding-bottom: 20px

.nav-list

	& li
		display: inline-block
		padding-right: 20px
		font-size: 20px
		font-weight: 100
		letter-spacing: 5px
		color: $black

		&:last-of-type
			padding-right: 0

		& a
			text-decoration: none

			&:hover
				color $softgreen
					
/**
* Main section
**/

.headline
	width: 100%
	height: 1500px
	backgrounds('../../images/hero.jpg', auto, auto, 100%, auto, no-repeat)


